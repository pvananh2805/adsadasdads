local s = Instance.new("ScreenGui")
local f = Instance.new("Frame")
local l = Instance.new("TextLabel")

s.Name = "TrollGui"
s.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

f.Parent = s
f.BackgroundColor3 = Color3.fromRGB(0,0,0)
f.Size = UDim2.new(1,0,1,0)

l.Parent = f
l.Size = UDim2.new(1,0,1,0)
l.BackgroundTransparency = 1
l.Text = game.Players.LocalPlayer.Name .. " cheater\nm tin thật à"
l.TextColor3 = Color3.fromRGB(255,0,0) -- đỏ cho nổi bật
l.TextScaled = true
l.Font = Enum.Font.SourceSansBold

task.wait(3)
game.Players.LocalPlayer:Kick("Bạn Đã Bị Kick (Cheat)")
